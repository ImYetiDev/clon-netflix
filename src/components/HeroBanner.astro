---
// props
const { movie } = Astro.props;
const imageUrl = `https://image.tmdb.org/t/p/original${movie.backdrop_path || movie.poster_path}`;
---
<section class="relative w-full h-[70vh] bg-black text-white overflow-hidden rounded-lg mb-10">
  <img src={imageUrl} alt={movie.title} class="absolute w-full h-full object-cover opacity-60" />

  <div class="relative z-10 p-10 max-w-2xl">
    <h1 class="text-4xl font-bold mb-2 drop-shadow-md">{movie.title}</h1>
    <p class="opacity-90 mb-4">{movie.overview}</p>
    <p class="text-sm mb-4">⭐ {movie.vote_average.toFixed(1)} • {movie.release_date?.slice(0, 4)}</p>
    <button class="bg-red-600 hover:bg-red-700 text-white px-5 py-2 rounded shadow">▶ Reproducir</button>
  </div>
</section>
